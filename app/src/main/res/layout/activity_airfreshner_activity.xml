<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1c2833"
    tools:context="com.blueskylinks.home_automation.Airfreshner_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_weight="1">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RGroup">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="    40 "
                    android:onClick="lb1"
                    android:layout_weight="1"
                    android:buttonTint="#e75748"
                    android:id="@+id/r1"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="    30"
                    android:onClick="lb2"
                    android:buttonTint="#e75748"
                    android:layout_weight="1"
                    android:id="@+id/r2"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="    20"
                    android:buttonTint="#e75748"
                    android:onClick="lb3"
                    android:layout_weight="1"
                    android:id="@+id/r3" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="    10"
                    android:onClick="lb4"
                    android:buttonTint="#e75748"
                    android:layout_weight="1"
                    android:id="@+id/r4"/>

            </RadioGroup>
        </LinearLayout>
        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:onClick="connect_device"
            android:text="connect"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/RGroup1">


                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="    15"
                    android:buttonTint="#e75748"
                    android:onClick="rb1"
                    android:layout_weight="1"
                    android:id="@+id/R1"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="    10"
                    android:onClick="rb2"
                    android:buttonTint="#e75748"
                    android:layout_weight="1"
                    android:id="@+id/R2" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="    5"
                    android:onClick="rb3"
                    android:buttonTint="#e75748"
                    android:layout_weight="1"
                    android:id="@+id/R3"/>

            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"></LinearLayout>
</LinearLayout>
